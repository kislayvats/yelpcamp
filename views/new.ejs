<%- include("partials/header")%>
<div class="container" style="justify-content: center;align-items: center;text-align: center;">
<h1>Add New Campground</h1>

    <form action="/campgrounds" method="POST" style="width: auto;">
        <div class="container" style="width: 45%;">
        <div class="form-group">
 
          <input type="text" class="form-control" name="name" placeholder="name of yelpcamp">
        
        </div>
        <div class="form-group">
         
          <input type="text" class="form-control" name="image" placeholder="URL of Image">
        </div>
        <div class="form-group">
         
          <input type="text" class="form-control" name="description" placeholder="Description">
        </div>
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
        </div>
    </form>
   <div> 
    <a class="btn btn-sm btn-danger" style="margin-top:10px;" href="/campgrounds">Go Back</a>
</div>
</div>
